[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[user]
  email = marcos.neves@gmail.com
	name = Marcos Neves
[github]
    user = neves
[apply]
  whitespace = nowarn
[branch]
  autosetupmerge = true
[core]
	excludesfile = /Users/neves/.gitignore
	editor = mate -w

[difftool "opendiff"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "opendiff"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[diff]
    tool = opendiff

[mergetool]
    keepBackup = false

[merge]
    tool = opendiff

[alias]
	amend = commit --amend -a
	todo = grep --line-number --word-regexp @TODO
	ls = log --all --date=short --format=format:'%C(bold yellow)%h %C(bold green)%ad %C(reset)%s %C(bold blue)[%an]%C(bold red)%d' --graph
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	aliases = "!git config -l | grep alias | cut -c 7-"
;https://git.wiki.kernel.org/index.php/Aliases
;http://durdn.com/blog/2012/11/22/must-have-git-aliases-advanced-examples/
;https://github.com/evbogue/git-aliases/blob/master/bash_aliases
;https://github.com/michel-kraemer/gitaliases/blob/master/gitaliases.sh
