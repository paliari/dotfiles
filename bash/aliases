# shell
alias ls="ls -GF $LS_OPTIONS"
alias l="ls -lah"
alias ll="ls -l"
alias mkp="mkdir -p"
alias ns="netstat -panel"
alias fgrep="fgrep -R"
alias grep="grep -i"

# git
alias gits="git status"
alias gitc="git commit -a -m "
alias gita="git add . && gits"
gitacp() { git add . && git status && git commit -a -m "gitacp $1" && git push; }
